{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true
  },

  "exclude": [
    "node_modules",
    "test",
    "lib",
    "dev",
    "webpack.config*.js"
  ]
}
